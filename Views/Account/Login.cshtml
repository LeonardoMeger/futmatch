@model FutMatchApp.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Entrar";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-header bg-primary text-white text-center">
                <h4><i class="fas fa-sign-in-alt me-2"></i>Entrar</h4>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="seu@email.com" type="email">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Senha" class="form-label">Senha</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="Senha" class="form-control" placeholder="Sua senha" type="password">
                        </div>
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="LembrarMe" class="form-check-input" type="checkbox">
                        <label asp-for="LembrarMe" class="form-check-label">Lembrar-me</label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>Entrar
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <small>
                    Não tem conta? <a asp-action="Register">Cadastre-se aqui</a>
                    <br />
                    <a asp-action="ForgotPassword" class="text-muted">Esqueci minha senha</a>
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}