@model FutMatchApp.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Redefinir Senha";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card">
            <div class="card-header bg-info text-white text-center">
                <h4><i class="fas fa-lock me-2"></i>Redefinir Senha</h4>
            </div>
            <div class="card-body">
                <p class="text-muted mb-4">
                    Digite sua nova senha abaixo.
                </p>

                <form asp-action="ResetPassword" method="post">
                    <input type="hidden" asp-for="Token" />
                    <input type="hidden" asp-for="Email" />

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="NovaSenha" class="form-label">Nova Senha</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="NovaSenha" class="form-control" placeholder="Mínimo 6 caracteres" type="password" autofocus>
                        </div>
                        <span asp-validation-for="NovaSenha" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmarNovaSenha" class="form-label">Confirmar Nova Senha</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="ConfirmarNovaSenha" class="form-control" placeholder="Repita a nova senha" type="password">
                        </div>
                        <span asp-validation-for="ConfirmarNovaSenha" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-info text-white">
                            <i class="fas fa-check me-2"></i>Redefinir Senha
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}