@model FutMatchApp.Models.ViewModels.ReservationViewModel
@{
    ViewData["Title"] = "Nova Reserva";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4><i class="fas fa-plus me-2"></i>Nova Reserva</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CourtId" class="form-label">Quadra</label>
                            <select asp-for="CourtId" class="form-select" required>
                                <option value="">Selecione uma quadra</option>
                                @foreach (var court in Model.AvailableCourts)
                                {
                                    <option value="@court.Id">@court.Nome - R$ @court.PrecoPorHora.ToString("F2")/h</option>
                                }
                            </select>
                            <span asp-validation-for="CourtId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="DuracaoHoras" class="form-label">Duração</label>
                            <select asp-for="DuracaoHoras" class="form-select" required>
                                <option value="1">1 hora</option>
                                <option value="2">2 horas</option>
                                <option value="3">3 horas</option>
                                <option value="4">4 horas</option>
                            </select>
                            <span asp-validation-for="DuracaoHoras" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Data</label>
                            <input type="date" class="form-control" id="dataReserva" min="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Horário</label>
                            <select class="form-select" id="horario" required>
                                <option value="">Selecione um horário</option>
                                <option value="06:00">06:00</option>
                                <option value="07:00">07:00</option>
                                <option value="08:00">08:00</option>
                                <option value="09:00">09:00</option>
                                <option value="10:00">10:00</option>
                                <option value="11:00">11:00</option>
                                <option value="12:00">12:00</option>
                                <option value="13:00">13:00</option>
                                <option value="14:00">14:00</option>
                                <option value="15:00">15:00</option>
                                <option value="16:00">16:00</option>
                                <option value="17:00">17:00</option>
                                <option value="18:00">18:00</option>
                                <option value="19:00">19:00</option>
                                <option value="20:00">20:00</option>
                                <option value="21:00">21:00</option>
                                <option value="22:00">22:00</option>
                            </select>
                        </div>
                    </div>

                    <!-- Campo hidden para enviar a data/hora combinada -->
                    <input asp-for="DataHora" type="hidden" />

                    <div class="mb-3">
                        <label asp-for="Observacoes" class="form-label">Observações (Opcional)</label>
                        <textarea asp-for="Observacoes" class="form-control" rows="3" placeholder="Informações adicionais sobre a partida..."></textarea>
                        <span asp-validation-for="Observacoes" class="text-danger"></span>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Como funciona:</strong> Após criar a reserva, outros jogadores poderão ver seu desafio e aceitar para jogar contra seu time.
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a class="btn btn-secondary" asp-action="Index">
                            <i class="fas fa-arrow-left me-1"></i>Voltar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Criar Reserva
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const dataInput = document.getElementById('dataReserva');
            const horarioSelect = document.getElementById('horario');
            const dataHoraHidden = document.querySelector('input[name="DataHora"]');

            function updateDateTime() {
                if (dataInput.value && horarioSelect.value) {
                    const dateTime = dataInput.value + 'T' + horarioSelect.value + ':00';
                    dataHoraHidden.value = dateTime;
                }
            }

            dataInput.addEventListener('change', updateDateTime);
            horarioSelect.addEventListener('change', updateDateTime);
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}